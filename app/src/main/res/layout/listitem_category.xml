<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/listitem_normal_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/listitem_padding"
    android:layout_marginRight="@dimen/listitem_padding"
    android:layout_marginTop="@dimen/listitem_padding"
    android:layout_marginBottom="@dimen/listitem_padding"
    android:clickable="true"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/listitem_padding"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_title"
            style="@style/listitem_title_style"/>

        <TextView
            android:id="@+id/tv_description"
            android:layout_marginTop="5dp"
            style="@style/listitem_content_style"/>

    </LinearLayout>

</android.support.v7.widget.CardView>