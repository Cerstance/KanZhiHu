<resources>

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- customize the color palette -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/text_black</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme" parent="BaseTheme">
    </style>

    <style name="Widget.ToolBar" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/toolbar_textColor</item>
    </style>


    <style name="base_textfield_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="listitem_title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="listitem_content_style" parent="listitem_title_style">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="listitem_cardview_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/listitem_padding_horizontal</item>
        <item name="android:layout_marginRight">@dimen/listitem_padding_horizontal</item>
        <item name="android:layout_marginTop">@dimen/listitem_padding_vertical</item>
        <item name="android:layout_marginBottom">@dimen/listitem_padding_vertical</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="SearchActivity_MaterialTheme" parent="AppTheme">
        <item name="undoBarStyle">@style/UndoBarMaterialStyle</item>
    </style>

</resources>
